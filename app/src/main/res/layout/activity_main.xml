<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="model"
            type="com.newfivefour.votefinder.Model"
            />
    </data>
    <android.support.constraint.ConstraintLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.user.votefinder.com.example.user.votefinder.MainActivity">

        <com.newfivefour.votefinder.views.DivisionsSpinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:divisions="@{model.divisions}">
        </com.newfivefour.votefinder.views.DivisionsSpinner>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text='@{(model.division.size>0) ? model.divisions.get(0).asJsonObject.get("name").toString() : "hmm"}'
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </android.support.constraint.ConstraintLayout>
</layout>

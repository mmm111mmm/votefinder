<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.newfivefour.votefinder.Model" />

        <import type="android.view.View" />

        <variable
            name="utils"
            type="com.newfivefour.votefinder.ViewUtils" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:focusable="true">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:minHeight="?actionBarSize"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
            app:titleTextColor="#eee">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/app_title"
                    style="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="6dp"
                    android:paddingLeft="6dp"
                    android:gravity="center_vertical"
                    android:paddingRight="6dp"
                    android:paddingTop="6dp"
                    android:minLines="3"
                    android:text='@{(model.divisions.size>0) ? utils.extract(model.divisions.get(model.division_select_number).asJsonObject.get("name")) : "hmm"}' />

                <com.newfivefour.votefinder.views.DivisionsSpinner
                    android:id="@+id/invisibile_divisions_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_below="@id/app_title"
                    app:clicked="@{model.changeBill}"
                    app:divisions="@{model.divisions}"
                    app:selected="@{model.division_select_number}" />
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <com.newfivefour.votefinder.views.ScrollViewWhichMovesUp
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar"
            app:change="@{model.billChanged}"
            android:clickable="true"
            android:focusable="true">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:context="com.example.user.votefinder.com.example.user.votefinder.MainActivity">

                <com.newfivefour.votefinder.views.DivisionDisplayCount
                    android:id="@+id/divisions_aye"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:title='@{(model.allvotes.size>0) ? "Ayes ("+model.allvotes.get(0).size+")" : ""}'
                    app:votes="@{(model.allvotes.size>0) ? model.allvotes.get(0) : null}" />

                <com.newfivefour.votefinder.views.DivisionDisplayCount
                    android:id="@+id/divisions_no"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divisions_aye"
                    app:title='@{(model.allvotes.size>0) ? "Noes ("+model.allvotes.get(1).size+")" : ""}'
                    app:votes="@{(model.allvotes.size>0) ? model.allvotes.get(1) : null}" />

                <com.newfivefour.votefinder.views.DivisionDisplayCount
                    android:id="@+id/divisions_absent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divisions_no"
                    app:title='@{(model.allvotes.size>0) ? "Absent ("+model.allvotes.get(2).size+")" : ""}'
                    app:votes="@{(model.allvotes.size>0) ? model.allvotes.get(2) : null}" />

                <com.newfivefour.votefinder.views.DivisionDisplayCount
                    android:id="@+id/divisions_hadnotentered"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divisions_absent"
                    app:title='@{(model.allvotes.size>0) ? "Had not entered parliament ("+model.allvotes.get(3).size+")" : ""}'
                    app:votes="@{(model.allvotes.size>0) ? model.allvotes.get(3) : null}" />

            </android.support.constraint.ConstraintLayout>

        </com.newfivefour.votefinder.views.ScrollViewWhichMovesUp>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:background="#a00"
            android:visibility="@{model.error ? View.VISIBLE : View.GONE}">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="There has been an error. Sorrow."
                android:textAlignment="center"
                android:textColor="#aaa" />
        </LinearLayout>

        <com.newfivefour.votefinder.views.DetailsBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar"
            app:show="@{model.show_profile}" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:background="#bbffffff"
            android:visibility="@{model.loading > 0 ? View.VISIBLE : View.GONE}">

            <ProgressBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_margin="20dp"
            android:background="#ddd"
            android:orientation="vertical"
            android:padding="20dp"
            android:visibility="@{model.show_about ? View.VISIBLE : View.GONE }"
            tools:visibility="visible">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="This shows the ayes, noes and absentees for any parliamentary vote with links to the text and video of the debate." />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="And it shows MP profiles including phone numbers, fax, twitter, parliamentary posts, committees" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contains data from explore.data.gov.uk" />
        </LinearLayout>

    </RelativeLayout>

</layout>
